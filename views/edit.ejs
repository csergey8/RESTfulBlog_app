<% include partials/header %>
    <div class="ui main container segment">
        <div class="huge header">Edit
            <%= blog.title %>
        </div>
        <form class="ui form" action="/blogs/<%= blog._id%>?_method=put" method="post">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%= blog.title %>" placeholder="title" class="">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" value="<%= blog.image%>" class="">
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]"><%= blog.body %></textarea>
            </div>

            <button class="ui violet basic big button" type="submit">Post</button>
        </form>
    </div>










